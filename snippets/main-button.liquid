<button
    class="main-button-all-page {{ classname }} 
    {% if variant == 'secondary' %}
      sec-btn
    {% endif %}">
    {{ button_text }} &#8594
  </button>
  
  <style>
    :root {
      --yollow-color: #fff544;
      --background: #f5f5f5;
    }
    .main-button-all-page {
      background-color: var(--yollow-color);
      padding: 14px 40px;
      color: var(--background);
      text-transform: uppercase;
      letter-spacing: 2px;
      cursor: pointer;
      border-radius: 10px;
      border: none;
      transition: 0.4s ease-in;
    }
    .main-button-all-page:hover {
      transition: 0.5 ease-in;
      background-color: var(--background);
      color: #000000;
    }
    .main-button-all-page:active {
      background-color: #000000;
    }
    .main-button-all-page.sec-btn {
        background-color: #000000;
        padding: 14px 40px;
        color: var(--background);
        text-transform: uppercase;
        letter-spacing: 2px;
        cursor: pointer;
        border-radius: 10px;
        border: none;
        transition: .4s ease-in;
    }
    
  
    .main-button-all-page.sec-btn:hover {
        transition: .5s ease-in;
        background-color: var(--yollow-color);
        color: #000000;
    }
    
    .main-button-all-page.sec-btn:active {
        background-color: #000000;
    }
  </style>
  