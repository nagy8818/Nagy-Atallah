      }
    ]
  }
  {% endschema %}
  {% comment %} end schema {% endcomment %}
   {% comment %} script javascript for small screen navbar {% endcomment %}
    <script>
      function myFunction() {
          var x = document.getElementById("myTopnav");
          if (x.className === "nav-for-small-screen") {
              x.className += " responsive";
          }
          else{
              x.className = "nav-for-small-screen";
          }
      }
    </script>