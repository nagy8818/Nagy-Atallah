        "label": "Main Logo Text"
      },
      {
        "type": "text",
        "id": "main-center-text",
        "label": "Main center Text"
      },
      {
        "type": "text",
        "id": "main-banner-body-title",
        "label": "Main Container title"
      },
      {
        "type": "text",
        "id": "main-head-button",
        "label": "Main Head Button Text"
      },
      {
        "type": "text",
        "id": "main-banner-body-dec",
        "label": "Main Container Description"
      },
      {
        "type": "text",
        "id": "main-banner-body-dec-mobile",
        "label": "Main Container Description for Mobile"
      },
      {
        "type": "text",
